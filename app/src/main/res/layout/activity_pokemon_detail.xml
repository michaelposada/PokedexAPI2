<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonDetail">

    <ImageView
        android:id="@+id/pokemon_pic"
        android:layout_width="104dp"
        android:layout_height="127dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_hp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/pokemon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/app_name"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_id"
        app:layout_constraintStart_toEndOf="@+id/pokemon_pic"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/pokemon_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_attack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_pic"

        />

    <TextView
        android:id="@+id/pokemon_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_spa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_hp" />

    <TextView
        android:id="@+id/pokemon_spa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_defense"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_attack"

        />

    <TextView
        android:id="@+id/pokemon_spd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_speed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_defense"

        />

    <TextView
        android:id="@+id/pokemon_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/pokemon_spd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_spd"

        />

    <TextView
        android:id="@+id/pokemon_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/app_name"
        app:layout_constraintLeft_toRightOf="@id/pokemon_pic"
        app:layout_constraintTop_toBottomOf="@+id/pokemon_height" />


    <TextView
        android:id="@+id/pokemon_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:hint="@string/app_name"
        app:layout_constraintLeft_toRightOf="@id/pokemon_pic"
        tools:layout_editor_absoluteX="162dp" />

    <TextView
        android:id="@+id/pokemon_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_spd" />


</android.support.constraint.ConstraintLayout>